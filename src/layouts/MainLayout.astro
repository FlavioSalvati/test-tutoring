<script>

document.addEventListener("DOMContentLoaded", function() {
  let vh = window.innerHeight * 0.01; 
  const offset = 15*vh; // Adjust this value to match the height of your navbar

  // Function to adjust scroll position
  function adjustScroll(this: any, e: Event) {
    const targetId = this.getAttribute('href');
    if (targetId.startsWith("#")) {
      e.preventDefault();

      const targetElement = document.querySelector(targetId);
      if (targetElement) {
        const topOffset = targetElement.getBoundingClientRect().top + window.pageYOffset - offset;

        window.scrollTo({
          top: topOffset,
          behavior: 'smooth'
        });
      }
    }
  }

  // Attach the function to all anchor links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', (e: Event) => adjustScroll(e));
  });
});
</script>