---
// src/pages/ivy-league.astro
import SubjectsLayout from '../../layouts/SubjectsLayout.astro';
import subjectData from '../../assets/data/subjects.json';


import image1 from "/src/assets/img/ivy-league/ivy-league1.webp";
import image2 from "/src/assets/img/ivy-league/ivy-league2.webp";
import image3 from "/src/assets/img/ivy-league/ivy-league3.webp";
import image5 from "/src/assets/img/ivy-league/ivy-league5.webp";

const images = [image1, image2, image3, image5];

const subjectDataImported = subjectData['ivy-league'];
const contentData = [
    {
        keyword: subjectDataImported.keyword,
        title: subjectDataImported.title,
        fee: subjectDataImported.fee,
        main_paragraph: subjectDataImported.main_paragraph,
        sections: subjectDataImported.sections.map((section, index) => ({
            title: section.title,
            subtitle: section.subtitle,
            imageSrc: images[index],
            imageAlt: section.imageAlt,
            paragraph: section.paragraph
        })),
        endImageSrc: images[images.length - 1],
        endImageAlt: subjectDataImported.endImageAlt,
        endStat: subjectDataImported.endStat,
        endContent: subjectDataImported.endContent
    }
];
const faqData = subjectDataImported.faq;

---

<SubjectsLayout contentData = {contentData}, faqData = {faqData} />