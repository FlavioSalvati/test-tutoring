---
// FaqList.astro

const { questionsAndAnswers } = Astro.props;

---
<div class="container py-4 py-xl-5" style="background: #1d3e37;margin: 0px;padding: 0px;width: 100%;padding-right: 0px;max-width: 100%;">
    <div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-2 row-cols-xl-2 row-cols-xxl-2" style="padding-bottom: 75px;padding-top: 75px;">
        <div class="col-sm-12 col-md-12 col-lg-4 col-xl-3 col-xxl-3">
            <div class="my-auto" style="padding-bottom: 100px;padding-top: 100px;">
                <h1 class="m-auto" style="text-align: center;font-family: swear-display, ui-serif;font-size: 60px;color: rgb(0,0,0);font-weight: bold;padding-bottom: 25px;"><span style="font-weight: normal !important; color: rgb(255, 255, 255);">FAQ</span></h1>
                <h2 class="m-auto" style="text-align: center;font-family: 'Abhaya Libre', serif;font-size: 40px;color: rgb(0,0,0);"><span style="color: rgb(255, 255, 255);">Online tutoring made easy for you</span></h2>
            </div>
        </div>
        <div class="col-sm-10 col-md-10 col-lg-7 col-xl-8 col-xxl-8 m-auto">
<div id="faqlist" class="accordion accordion-flush" style="border-style: none; border-top-style: none; border-right-style: none; border-bottom-style: none; border-left-style: none;">
  {questionsAndAnswers.map((qa, index) => (
    <div class="accordion-item" key={index}>
      <h2 class="accordion-header">
        <button class="btn accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target={`#content-accordion-${index}`}>
          <span class="d-flex faq-question">{qa.question}</span>
        </button>
      </h2>
      <div id={`content-accordion-${index}`} class="accordion-collapse collapse" data-bs-parent="#faqlist">
        <p class="accordion-body">
          {qa.answer}
        </p>
      </div>
    </div>
  ))}
</div>

<style>
.accordion-button {
  background: rgba(249, 250, 251, 0.1);
  margin-bottom: 0 !important;
  width: 100%;
  padding: 0;
  padding-left: 15px;
  border: 1px solid #ffffff;
  height: 70px;
  font-size: 25px;
}

.accordion-button:not(.collapsed) .accordion-body span {
  font-size: 20px;
}

.accordion-button:not(.collapsed) .accordion-body ul {
  font-size: 18px;
  color: rgb(255, 255, 255);
}

.accordion-button.collapsed {
  border: 1px solid #ffffff;
}

.accordion-button:not(.collapsed) {
  border: 1px solid rgb(212, 175, 54);
  background: rgba(249, 250, 251, 0.1) !important;
}

.accordion-button:hover, .accordion-button.collapsed:hover {
  border: 1px solid rgb(212, 175, 54);
}

.accordion-button:hover .faq-question, .accordion-button.collapsed:hover .faq-question, .accordion-button:not(.collapsed) .faq-question {
  color: rgb(212, 175, 54);
}

.faq-question {
  color: rgb(255, 255, 255);
  max-width: 75%;
  font-size: 25px;
  border-left-color: rgb(255, 255, 255);
  text-align: left;
  font-family: 'Abhaya Libre', serif;
  transition: color 0.3s ease;
}

.accordion-button::after, .accordion-button.collapsed::after {
  content: "";
  display: block;
  position: absolute;
  right: 20px;
  top: 50%;
  transform: translateY(-50%) rotate(0deg);
  width: 40px;
  height: 40px;
  transition: all .3s linear;
  background-size: 40px;
  transform-origin: 50% 20%;
}

.accordion-button::after {
  background-image: url(/src/assets/img/aux/down_chevron.png);
}

.accordion-button.collapsed::after {
  background-image: url(/src//assets/img/aux/down_chevron.png);
}

.accordion-button:not(.collapsed)::after, .accordion-button:hover::after, .accordion-button.collapsed:hover::after {
  background-image: url(/src/assets/img/aux/down_chevron_golden.png);
}

.accordion-item {
  padding: 0;
  border-style: none;
  margin-bottom: 0 !important;
  background: rgba(249, 250, 251, 0.1) !important;
}

p.accordion-body {
  margin: 0;
}

/* Accordion body content */

.accordion-body {
  color: rgb(255, 255, 255);
  font-family: 'Abhaya Libre', serif;
  font-size: 18px;
}

@media (min-width: 1400px) {
  .accordion-button {
    height: 70px;
  }
}

@media (min-width: 1400px) {
  .accordion-button::after {
    top: 28%;
    width: 30px;
    height: 30px;
    background-size: 30px;
  }
}

@media (min-width: 1200px) {
  .accordion-button {
    height: 80px;
  }
}

@media (max-width: 992px) {
  .accordion-button {
    height: 100px;
  }
}

@media (max-width: 768px) {
  .accordion-button {
    height: 120px;
  }
}

@media (max-width: 576px) {
  .accordion-button {
    height: 130px;
  }
}


</style>