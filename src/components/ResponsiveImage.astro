---
import { Image } from 'astro:assets';

const { src, alt, className, style } = Astro.props;

const widths = [400, 768, 992, 1200, 1600];
const sizes = `(max-width: 575px) 100vw,
               (max-width: 767px) 100vw,
               (max-width: 991px) 100vw,
               (max-width: 1199px) 100vw,
               100vw`;
---

<Image
  src={src}
  alt={alt}
  class={className}
  style={`${style}; max-width: 100%; height: auto;`}
  widths={widths}
  sizes={sizes}
/>