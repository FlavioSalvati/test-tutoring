---
const { imageSrc, imageAlt, stat, content } = Astro.props;
import ResponsiveImage from './ResponsiveImage.astro';
---
<div class="container-fluid" style="position: relative; height: 900px; overflow: hidden; padding: 0; margin: 0;">
    <ResponsiveImage
        src={imageSrc ? imageSrc : ''}
        alt={imageAlt ? imageAlt : ''}
        class="img-fluid"
        style="max-height: 100%; height: 100%; width: 100%; object-fit: cover "
    />
    <div class="overlay" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0, 0.5)); padding: 0; margin: 0;"></div>
    <div class="row" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); text-align: center; width: 100%;">
        <div class="col m-auto">
            <div>
                <h1 class="m-auto outline-text d-none d-md-block" style="text-align:center;color:rgb(255,255,255);font-size:250px;font-family:'Abhaya Libre', serif;font-weight:bold;">{stat}</h1>
                <h1 class="m-auto d-none d-md-block" style="text-align:center;color:rgb(255,255,255);font-size:100px;font-family:'Abhaya Libre', serif;font-weight:bold;" set:html={content}></h1>
                <h1 class="m-auto outline-text d-block d-md-none" style="text-align:center;color:rgb(255,255,255);font-size:125px;font-family:'Abhaya Libre', serif;font-weight:bold;">{stat}</h1>
                <h1 class="m-auto d-block d-md-none" style="text-align:center;color:rgb(255,255,255);font-size:60px;font-family:'Abhaya Libre', serif;font-weight:bold;" set:html={content}></h1>
            </div>
        </div>
    </div>
</div>